<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/infobar_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/textView"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@+id/finishLatLong"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/finishLatLong" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.601237, 110.123719"
        android:id="@+id/startLatLong"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect_button"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.601237, 110.123719"
        android:id="@+id/finishLatLong"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/startLatLong"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rect_button"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@+id/startLatLong" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finishLatLong"
        android:orientation="horizontal"
        android:divider="@drawable/abc_list_divider_mtrl_alpha"
        android:showDividers="middle" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_directions_white_36dp"
            android:background="@drawable/infobar_button"
            android:layout_below="@+id/textView5"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/ic_close_white_36dp"
            android:background="@drawable/infobar_button"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_column="1"
            android:layout_row="0"
            android:adjustViewBounds="false"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>