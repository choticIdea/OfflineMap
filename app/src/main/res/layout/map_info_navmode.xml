<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/infobar_background"
    android:paddingBottom="10dp"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dari"
        android:id="@+id/start"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ke"
        android:id="@+id/finish"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@+id/to"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/to" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.601237, 110.123719"
        android:id="@+id/from"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_rect_label"
        android:layout_toRightOf="@+id/start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/buttonClosePoint"
        android:textSize="16sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.601237, 110.123719"
        android:id="@+id/to"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/from"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rect_label"
        android:layout_marginRight="5dp"
        android:layout_alignLeft="@+id/from"
        android:layout_toLeftOf="@+id/buttonClosePoint"
        android:textSize="16sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClosePoint"
        android:layout_column="1"
        android:layout_row="0"
        android:adjustViewBounds="false"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_close_white_36dp"
        android:padding="20dp" />

</RelativeLayout>