<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/list_item_shadow"/>
        </shape>
    </item>
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <padding
                android:top="@dimen/list_item_padding_vertical"
                android:bottom="@dimen/list_item_padding_vertical"
                android:left="@dimen/abc_list_item_padding_horizontal_material"
                android:right="@dimen/abc_list_item_padding_horizontal_material"
                />
        </shape>
    </item>
</layer-list>